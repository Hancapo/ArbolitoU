<UserControl xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1280" d:DesignHeight="720"
        x:Class="ArbolitoU.Windows.LoadingWindow"
        xmlns:i="https://github.com/projektanker/icons.avalonia">
    <Grid>
        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
            <i:Icon Value="mdi-tree" Foreground="LawnGreen" FontSize="200" />
            <TextBlock Text="ArbolitoU" FontSize="50" Foreground="White" HorizontalAlignment="Center" />
            <ProgressBar Margin="0,10,0,10" Height="7" IsIndeterminate="True" HorizontalAlignment="Center"/>
            <TextBlock IsVisible="False" FontFamily="{StaticResource NunitoFont}" MaxHeight="25" Text="Idle" MaxLines="1" MaxWidth="1200" x:Name="tbLoadingStatus" FontSize="20" HorizontalAlignment="Center"/>
        </StackPanel>

    </Grid>
</UserControl>
