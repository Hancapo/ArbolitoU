<ui:FluentWindow
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Background="Gray"
        ResizeMode="NoResize"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica"
        WindowCornerPreference="Round"
        WindowStartupLocation="CenterScreen"
        xmlns:local="clr-namespace:ArbolitoU"
        mc:Ignorable="d"
        Title="MainWindow" Height="720" Width="1280">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>
        <ui:TitleBar Title="ArbolitoU" >
        </ui:TitleBar>
        <Grid VerticalAlignment="Top" Height="55" Grid.Row="1">
            <Menu>
                <ui:MenuItem Header="File" SymbolIcon="Folder24">
                    <MenuItem Header="Open File(s)"/>
                    <MenuItem Header="Exit"/>
                </ui:MenuItem>
                <ui:MenuItem Header="Help" SymbolIcon="ChatHelp24"> 
                    <MenuItem Header="Report Bug">
                        <MenuItem.Icon>
                            <ui:SymbolIcon Symbol="Box24"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="About">
                        <MenuItem.Icon>
                            <ui:SymbolIcon Symbol="BookQuestionMark24"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </ui:MenuItem>
            </Menu>
        </Grid>
    </Grid>
    
</ui:FluentWindow>
