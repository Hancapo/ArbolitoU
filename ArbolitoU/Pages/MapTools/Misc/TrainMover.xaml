<Page x:Class="ArbolitoU.Pages.MapTools.Misc.TrainMover"
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      ui:Design.Background="{DynamicResource ApplicationBackgroundBrush}"
      ui:Design.Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      Foreground="{DynamicResource TextFillColorPrimaryBrush}"
      mc:Ignorable="d"
      Title="TrainMover" Height="570" Width="960">
    <Grid Margin="20">
        <StackPanel HorizontalAlignment="Left" Orientation="Vertical">
            <ui:NumberBox Margin="5" AcceptsExpression="True" PlaceholderText="X" Background="#591b1b" Width="200" MaxDecimalPlaces="6" Minimum="-30000" Maximum="30000"/>
            <ui:NumberBox Margin="5" AcceptsExpression="True" PlaceholderText="Y" Background="#1b5935" Width="200" MaxDecimalPlaces="6" Minimum="-30000" Maximum="30000"/>
            <ui:NumberBox Margin="5" AcceptsExpression="True" PlaceholderText="Z" Background="#1b3259" Width="200" MaxDecimalPlaces="6" Minimum="-30000" Maximum="30000"/>
            <ui:Button Appearance="Primary" Content="Move" Icon="ArrowMove24" Margin="5"/>
        </StackPanel>
    </Grid>
</Page>
